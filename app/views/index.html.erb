<style> .navbar  { display: none;}</style>
<div class="panel-heading">
  <%=@message if @message%>
</div>

  <div class="jumbotron">
    <div class="container">
      <h1>Welcome to SocialProCon!</h1>
      <p>Create, save, and edit your own pro con lists. View and contribute to your friends' pro con lists.</p>
      <div class="row">
        <div class="col-md-6">
          <p><a class="btn btn-primary btn-block" href="/login" role="button">Log In &raquo;</a></p>
        </div>
        <div class="col-md-6">
          <p><a class="btn btn-primary btn-block" href="/signup" role="button">Create Account &raquo;</a></p>
        </div>
      </div>
    </div>
  </div>


<div class="container">
<div class="row">
      <div class="control-group" id="fields">
          <label class="control-label" for="field1">Nice Multiple Form Fields</label>
          <div class="controls">
              <form role="form" autocomplete="off">
                  <div class="entry input-group col-xs-3">
                      <input class="form-control" name="fields[]" type="text" placeholder="Type something" />
                    <span class="input-group-btn">
                          <button class="btn btn-success btn-add" type="button">
                              <span class="glyphicon glyphicon-plus"></span>
                          </button>
                      </span>
                  </div>
              </form>
          <br>
          <small>Press <span class="glyphicon glyphicon-plus gs"></span> to add another form field :)</small>
          </div>
      </div>
</div>
</div>
