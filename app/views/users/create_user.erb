<div class="container">
  <form action="/signup" method="POST"  class="form-signin" _lpchecked="1">
    <h2 class="form-heading">Signup</h2>
    <label for="username" class="sr-only">Username:</label>
      <input type="text" name="username" id="username" class="form-control" placeholder="Create username" required autofocus/>
    <label for="email" class="sr-only">Email:</label>
      <input type="text" name="email" id="email" placeholder="Email address" class="form-control" required autofocus/>
    <label for="password" class="sr-only">Password:</label>
      <input type="text" name="password" id="password" placeholder="Create password" class="form-control" required />
    <button type="submit" class="btn btn-lg btn-primary btn-block">Create Account</button>
  </form>
</div>
