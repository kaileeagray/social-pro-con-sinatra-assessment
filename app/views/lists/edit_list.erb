<%if @errors%>
  <div class="panel panel-danger">
    <!-- Default panel contents -->
    <div class="panel-heading">List edit failed. Please try again after fixing the following errrors:</div>
    <!-- List group -->
    <ul class="list-group">
      <% @errors.each do |error|%>
        <li class="list-group-item"><%=error%></li>
      <%end%>
    </ul>
  </div>
<%end%>

<div class="container">
  <h1>Edit Pro/Con List</h1>
  <br></br>
  <form action="/lists/<%=@list.id%>" method="POST">
    <input type="hidden" value="patch" name="_method">

    <div class="form-group">
      <label for="title">Title of List: </label>
      <textarea name="list[title]" class="form-control" rows="1" required autofocus><%=@list.title%></textarea>
    </div><br>
    <div class="form-group">
      <label for="description">Description: </label>
      <textarea name="list[description]" class="form-control" rows="3" required autofocus><%=@list.description%></textarea>
    </div>
    <div class="form-group">
      <label for="source">Link to source (optional): </label>
      <textarea name="list[source]" type="link" class="form-control" placeholder="link not required" rows="1"><%=@list.source if @list.source != "f"%></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary ">Update List</button>
    </div>
  </form>
</div>
