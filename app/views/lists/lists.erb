<h1>Welcome, <%=@current_user.username if @current_user%>!</h1>
<h2>View and edit your Pro/Con Lists:</h2>

<%@current_user.lists.all.each do |list|%>
    <a href="/lists/<%=list.id%>"><h4><%=list.title%></h4></a>
    <p><%=list.description%></p>

<%end%>

<br>

<h2>View all users' lists:</h2>
  <ul>
    <%User.all.each do |user|%>
      <%if user.id != @current_user.id%>
        <h3>User: <%=user.username%></h3>
        <%user.lists.all.each do |list|%>
            <a href="/lists/<%=list.id%>"><h4><%=list.title%></h4></a>
            <p><%=list.description%></p>
        <%end%>
      <%end%>
    <%end%>
  </ul>
