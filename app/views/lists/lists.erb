<div class="container">

  <div class="page-heading">
    <h1>Welcome, <%=@current_user.username if @current_user%>!</h1>
  </div>

<div class="row">
  <div class="col-md-6">
    <div class="page-heading">
      <p class="lead">View other users' most recent Pro/Con lists:</p>
    </div>      <%User.all.each do |user|%>
        <%if user.id != @current_user.id%>
          <h4><%=user.username%>'s Lists</h4>
          <%user.lists.all.each do |list|%>
              <a href="/lists/<%=list.id%>"><h4><%=list.title%></h4></a>
              <p><%=list.description%></p>
          <%end%>
        <%end%>
      <%end%>
    </div>

    <div class="col-md-6">

      <div class="page-heading">
        <p class="lead">View and edit your Pro/Con lists:</p>
      </div>

      <%@current_user.lists.all.each do |list|%>
          <a href="/lists/<%=list.id%>"><h4><%=list.title%></h4></a>
          <p><%=list.description%></p>
      <%end%>
    </div>
  </div>
  <br></br>

</div>
