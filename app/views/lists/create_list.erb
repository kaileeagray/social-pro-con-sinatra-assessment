<%if @errors%>
  <div class="panel panel-danger">
    <!-- Default panel contents -->
    <div class="panel-heading">List creation failed. Please try again after fixing the following errrors:</div>
    <!-- List group -->
    <ul class="list-group">
      <% @errors.each do |error|%>
        <li class="list-group-item"><%=error%></li>
      <%end%>
    </ul>
  </div>
<%end%>

<div class="container">
  <h1>New Pro/Con List</h1>
  <br></br>
  <form action="/lists" method="POST">
    <div class="form-group">
      <label for="title">Title of List: </label>
      <input name="list[title]" type="text" class="form-control" placeholder="title required" required>
    </div><br>
    <div class="form-group">
      <label for="description">Description: </label>
      <textarea name="list[description]" class="form-control" placeholder="description required" rows="3"></textarea>
    </div>
    <div class="form-group">
      <label for="source">Link to source (optional): </label>
      <input name="list[source]" type="link" class="form-control" placeholder="link not required">
    </div>
    <button type="submit" class="btn btn-primary">Create List</button>
  </form>
</div>
