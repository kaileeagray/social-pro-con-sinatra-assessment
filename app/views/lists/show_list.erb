<div class="container">

  <div class="page-header">
    <div class="row">
      <div class="col-md-10">
        <h1><%=@list.title if @list%> <small><%=@list.description%></small></h1>
        <h4>by <a href="/users/<%=User.find(@list.user_id).username%>"><%=User.find(@list.user_id).username%></a></h4>
      </div>
      <div class="col-md-2 center">
        <a href="/lists/<%=@list.id%>/procons/new" class="btn btn-primary btn-block" role="button">Add Pros and Cons</a>
      </div>
    </div>
  </div>

    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-success">
          <!-- Default panel contents -->
          <div class="panel-heading"> <h4 class="text-center">User's Pros</h4></div>
          <!-- List group -->
          <ul class="list-group">
            <%@list.pros.where(user_id: @list.user_id).each do |pro|%>
            <li class="list-group-item">
              <div class="row">
                <div class="col-md-10"><%=pro.description%></div>
                <div class="col-md-2"><%=pro.weight%></div>
              </div>
            </li>
            <%end%>
          </ul>

          <div class="panel-heading"> <h4 class="text-center">Pros from Other Users</h4></div>
          <!-- List group -->
          <ul class="list-group">
            <%@list.pros.where.not(user_id: @list.user_id).each do |pro|%>
            <li class="list-group-item">
              <div class="row">
                <div class="col-md-10"><%=pro.description%></div>
                <div class="col-md-2"><%=pro.weight%></div>
              </div>
               by <a href="/users/<%=User.find(pro.user_id).username%>"><%=User.find(pro.user_id).username%></a>
            </li>
            <%end%>
            <li class="list-group-item">
              <div class="row">
                <div class="col-md-2 col-md-offset-8">
                    <h5>Total:</h5>
                </div>
                <div class="col-md-2">
                    <h5><%=@list.pro_sum%></h5>
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>

      <div class="col-md-6">
        <div class="panel panel-danger">
          <!-- Default panel contents -->
          <div class="panel-heading"> <h4 class="text-center">User's Cons</h4></div>
          <!-- List group -->
          <ul class="list-group">
            <%@list.cons.where(user_id: @list.user_id).each do |con|%>
            <li class="list-group-item">
              <div class="row">
                <div class="col-md-10"><%=con.description%></div>
                <div class="col-md-2"><%=con.weight%></div>
              </div>
            </li>
            <%end%>
          </ul>

          <div class="panel-heading"> <h4 class="text-center">Cons from Other Users</h4></div>
          <!-- List group -->
          <ul class="list-group">
            <%@list.cons.where.not(user_id: @list.user_id).each do |con|%>
            <li class="list-group-item">
              <div class="row">
                <div class="col-md-10"><%=con.description%></div>
                <div class="col-md-2"><%=con.weight%></div>
              </div>
               by <a href="/users/<%=User.find(con.user_id).username%>"><%=User.find(con.user_id).username%></a>
            </li>
            <%end%>
            <li class="list-group-item">
              <div class="row">
                <div class="col-md-2 col-md-offset-8">
                    <h5>Total:</h5>
                </div>
                <div class="col-md-2">
                    <h5><%=@list.con_sum%></h5>
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <%if @list.pro_con_sum > 0%>
          <div class="alert alert-success" role="alert"> <h3 class="text-center">Pro/Con Rank Total: <%=@list.pro_con_sum%></h3></div>
        <%elsif @list.pro_con_sum == 0%>
          <div class="alert alert-info" role="alert"> <h3 class="text-center">Pro/Con Rank Total: <%=@list.pro_con_sum%></h3></div>
        <%else%>
          <div class="alert alert-danger" role="alert" > <h3 class="text-center">Pro/Con Rank Total: <%=@list.pro_con_sum%></h3></div>
        <%end%>
      </div>
    </div>

    <br></br>

  </div>
